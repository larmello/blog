<div class="container">

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
  <%= cl_image_tag @article.photo.key, height: 100, width: 100, crop: :fill %>
</p>

<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-warning" %> |
<%= link_to 'Back', articles_path, class: "btn btn-dark"%>
</div>
